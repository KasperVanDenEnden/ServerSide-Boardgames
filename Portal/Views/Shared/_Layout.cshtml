<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <div id="TopHeader" class="px-2">
            <h4><b>Populaire avond:</b> Weerwolven van wakkerdam</h4>
        </div>
        <div id="NavHeader">
            <nav  class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="images/icon100.png" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                                </li>
                               
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-area="" asp-controller="Gamenight" asp-action="Organise">ORGANISEREN</a>
                                </li>
                                <li>
                                    <a class="nav-link text-black" asp-area="" asp-controller="Boardgame" asp-action="Boardgames">BORDSPELLEN</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-black dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        SPEELAVONDEN
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li>
                                            <a class="dropdown-item text-black" asp-area="" asp-controller="Gamenight" asp-action="Gamenights">Alle avonden</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-black" asp-area="" asp-controller="Gamenight" asp-action="Hosted">Eigen avonden</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-black" asp-area="" asp-controller="Gamenight" asp-action="Participating">Deelnemende avonden</a>
                                        </li>
                                        <!-- Add more dropdown items as needed -->
                                    </ul>
                                </li>
                                <li class="nav-item nav-divider">
                                    <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Privacy">PRIVACY</a>
                                </li>
                                <li>
                                    <a class="btn btn-blue mx-2" asp-area="" asp-controller="Account" asp-action="Logout">Sign out</a>
                                </li>

                            }
                            else
                            {
                                <li >
                                    <a class="btn btn-blue mx-2" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                                </li>
                                <li >
                                    <a class="btn btn-blue mx-2" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
