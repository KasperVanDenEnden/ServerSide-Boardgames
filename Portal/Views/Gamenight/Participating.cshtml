@{
}
@using Domain
@model List<Gamenight>

@if(Model.Count == 0)
{
    <p> You are no yet participating in a gamenight</p>    
} else
{
    <div class="row">
        @foreach (var night in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"> @night.DateTime</h5>
                        <form method="POST" asp-action="Detail" asp-controller="Gamenight">
                            <input type="hidden" name="gamenightId" value="@night.Id" />
                            <button type="submit" class="btn btn-link">View Details</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}