@{
    var boardgames = ViewBag.Boardgames as List<Boardgame>;
}

@model GamenightViewModel

<form asp-action="Organise" asp-controller="Gamenight" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h1>Gamenight</h1>
    <!-- Add other form fields according to the GamenightViewModel properties -->
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" class="form-control" type="date" min="@DateTime.Now.Year" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time">Time</label>
        <input asp-for="Time" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsPG18" class="form-check-input" type="checkbox" />
            <label asp-for="IsPG18" class="form-check-label">Is PG18</label>
        </div>
        <span asp-validation-for="IsPG18" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="MaxParticipants" />
        <label asp-for="MaxParticipants">Max Participants</label>
        <span asp-validation-for="MaxParticipants" class="text-danger"></span>
    </div>

    <hr />

    <h2>Address</h2>

    <div class="form-group">
        <label asp-for="Street">Street</label>
        <input asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Housenumber">House Number</label>
        <input asp-for="Housenumber" class="form-control" />
        <span asp-validation-for="Housenumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Postal">Postal Code</label>
        <input asp-for="Postal" class="form-control" />
        <span asp-validation-for="Postal" class="text-danger"></span>
    </div>

    <hr />

    <h2>Boardgames</h2>
    <div class="form-group">
        <label>Select Board Games</label>
        @foreach (var boardgame in boardgames)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedBoardgameIds" value="@boardgame.Id"
                @(Model.SelectedBoardgameIds != null && Model.SelectedBoardgameIds.Contains(boardgame.Id) ? "checked" : "") />
                <label>@boardgame.Name</label>
            </div>
        }
        <span asp-validation-for="SelectedBoardgameIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
