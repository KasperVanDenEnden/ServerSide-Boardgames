@{
}
@using Domain
@model List<Boardgame>

@if (Model.Count == 0)
{
    <p>No boardgames found</p>
}
else
{
    <div class="row">
        @foreach (var game in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    @{
                        // Convert byte[] to base64 string
                        var imageBase64 = Convert.ToBase64String(game.Image);
                        var imageUrl = $"data:image;base64,{imageBase64}";
                    }
                    <img class="card-img-top" src="@imageUrl" alt="Game Image">
                    <div class="card-body">
                        <span>@game.Genre / @game.Gametype</span>
                        <h5 class="card-title">@game.Name</h5>
                        <p class="card-text">@game.Description</p>
                        <!-- Additional game information as needed -->
                    </div>
                </div>
            </div>
        }
    </div>
}